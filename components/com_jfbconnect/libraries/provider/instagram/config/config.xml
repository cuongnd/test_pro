<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="api">
        <field name="instagram_app_id"
               type="text"
               label="COM_JFBCONNECT_CONFIG_INSTAGRAM_API_APP_ID_LABEL"
               default=""
               labelclass="config_setting"
                />
        <field name="instagram_secret_key"
               type="text"
               label="COM_JFBCONNECT_CONFIG_INSTAGRAM_API_SECRET_KEY_LABEL"
               default=""
               labelclass="config_setting"
                />
        <field name="instagram_callback_ssl"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_INSTAGRAM_CALLBACK_SSL_LABEL"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field type="spacer"
               name="setuplink"
               label="COM_JFBCONNECT_CONFIG_INSTAGRAM_APP_SETUP_LINK"
                />
    </fieldset>
</form>
