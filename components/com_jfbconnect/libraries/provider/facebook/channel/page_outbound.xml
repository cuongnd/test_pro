<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="attribs">
        <fieldset name="attribs">
            <field name="user_id"
                   type="channeluserlist"
                   label="COM_JFBCONNECT_CHANNEL_USER_ID_LABEL"
                   description="COM_JFBCONNECT_CHANNEL_USER_ID_DESCRIPTION"
                   onchange="jfbcAdmin.channels.outbound.onuserchange(this.value)"
                   default=""
                   labelclass="config_setting"
                   class="facebook"
                    />
            <field name="page_id"
                   type="facebookpagelist"
                   label="COM_JFBCONNECT_CHANNEL_FACEBOOK_PAGE_ID_LABEL"
                   description="COM_JFBCONNECT_CHANNEL_FACEBOOK_PAGE_ID_DESCRIPTION"
                   default=""
                   labelclass="config_setting"
                   class="facebook"
                    />
            <field name="show_admin_only"
                   type="radio"
                   label="COM_JFBCONNECT_CHANNEL_FACEBOOK_PAGE_ADMIN_LABEL"
                   description="COM_JFBCONNECT_CHANNEL_FACEBOOK_PAGE_ADMIN_DESCRIPTION"
                   default="1"
                   labelclass="config_setting"
                   class="btn-group"
                   >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="allow_posts"
                   type="radio"
                   label="COM_JFBCONNECT_CHANNEL_FACEBOOK_ALLOW_POSTS_LABEL"
                   description="COM_JFBCONNECT_CHANNEL_FACEBOOK_ALLOW_POSTS_DESCRIPTION"
                   default="1"
                   labelclass="config_setting"
                   class="btn-group"
                   >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
</form>