<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="api">
        <field name="facebook_app_id"
               type="text"
               label="COM_JFBCONNECT_CONFIG_FACEBOOK_API_APP_ID_LABEL"
               default=""
               labelclass="config_setting"
                />
        <field name="facebook_secret_key"
               type="text"
               label="COM_JFBCONNECT_CONFIG_FACEBOOK_API_SECRET_KEY_LABEL"
               default=""
               labelclass="config_setting"
                />
        <field type="spacer"
               name="setuplink"
               label="COM_JFBCONNECT_CONFIG_FACEBOOK_APP_SETUP_LINK"
                />
    </fieldset>
    <fieldset name="login_options">
        <field name="facebook_auto_login"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_LOGIN_AUTO_LOGIN_LABEL"
               description="COM_JFBCONNECT_CONFIG_LOGIN_AUTO_LOGIN_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="login_use_popup"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_LOGIN_USE_POPUP_LABEL"
               description="COM_JFBCONNECT_CONFIG_LOGIN_USE_POPUP_DESC"
               default="1"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="facebook_login_show_modal"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_LOGIN_SHOW_POPUP_LABEL"
               description="COM_JFBCONNECT_CONFIG_LOGIN_SHOW_POPUP_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="logout_joomla_only"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_LOGIN_LOGOUT_JOOMLA_LABEL"
               description="COM_JFBCONNECT_CONFIG_LOGIN_LOGOUT_JOOMLA_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="permissions">
        <field name="facebook_perm_custom"
               type="textarea"
               label="COM_JFBCONNECT_CONFIG_FB_API_ADD_PERMISSION_REQ_LABEL"
               description="COM_JFBCONNECT_CONFIG_FB_API_ADD_PERMISSION_REQ_DESC"
               rows="3"
               cols="35"
               labelclass="config_setting"
                />
        <field type="spacer"
               label="COM_JFBCONNECT_CONFIG_FB_API_ADD_PERMISSION_REQ_DESC2"
                />
    </fieldset>
    <fieldset name="debug">
        <field name="facebook_curl_disable_ssl"
               type="radio"
               label="COM_JFBCONNECT_CONFIG_FB_API_DISABLE_SSL_VAL_LABEL"
               description="COM_JFBCONNECT_CONFIG_FB_API_DISABLE_SSL_VAL_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="facebook_language_locale"
               type="text"
               label="COM_JFBCONNECT_CONFIG_FB_API_LANG_LOCALE_LABEL"
               description="COM_JFBCONNECT_CONFIG_FB_API_LANG_LOCALE_DESC"
               default=""
               labelclass="config_setting"
                />
    </fieldset>
</form>
