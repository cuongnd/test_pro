                <field name="price_color" default="#990000" type="color" label="COM_JFBCONNECT_WIDGET_AMAZON_OMAKASE_PRICE_COLOR_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_OMAKASE_PRICE_COLOR_DESCRIPTION" />
                <field name="amazon_color" default="#CC6600" type="color" label="COM_JFBCONNECT_WIDGET_AMAZON_OMAKASE_AMAZON_TEXT_COLOR_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_OMAKASE_AMAZON_TEXT_COLOR_DESCRIPTION" />
                <field name="tracking_id" type="text" label="COM_JFBCONNECT_WIDGET_AMAZON_TRACKING_ID_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_TRACKING_ID_DESCRIPTION" />
