<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params">
        <fields name="widget_settings">
            <fieldset name="widget_account_settings">
                <field name="region" type="list" default="US" label="COM_JFBCONNECT_WIDGET_AMAZON_REGION_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_REGION_DESCRIPTION">
                    <option value="US">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_US</option>
                    <option value="GB">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_UK</option>
                    <option value="DE">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_DE</option>
                    <option value="FR">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_FR</option>
                    <option value="JP">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_JP</option>
                    <option value="CA">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_CA</option>
                    <option value="IT">COM_JFBCONNECT_WIDGET_AMAZON_REGION_OPTION_IT</option>
                </field>
            </fieldset>
            <fieldset name="widget_myfav_settings" addfieldpath="/components/com_jfbconnect/libraries/provider/amazon/fields/">
                <field name="title" type="text" label="COM_JFBCONNECT_WIDGET_AMAZON_TITLE_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_TITLE_DESCRIPTION" />
                <field name="width" type="text" default="250" label="COM_JFBCONNECT_WIDGET_AMAZON_WIDTH_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_WIDTH_DESCRIPTION" />
                <field name="columns" type="text" default="1" label="COM_JFBCONNECT_WIDGET_AMAZON_COLUMNS_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_COLUMNS_DESCRIPTION" />
                <field name="rows" type="text" default="3" label="COM_JFBCONNECT_WIDGET_AMAZON_ROWS_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_ROWS_DESCRIPTION" />
                <field name="asin" type="text" label="COM_JFBCONNECT_WIDGET_AMAZON_ASIN_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_ASIN_DESCRIPTION" />
                <field name="shuffle_products" default="1" type="radio" size="1" label="COM_JFBCONNECT_WIDGET_AMAZON_SHUFFLE_PRODUCTS_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_SHUFFLE_PRODUCTS_DESCRIPTION">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="theme" type="groupedlist" default="2.Default" label="COM_JFBCONNECT_WIDGET_AMAZON_THEME_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_DESCRIPTION" onchange="var arr = this.value.split('.'); toogleDesign(arr[0]);">
                    <group label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1">
                        <option value="1.Blues">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1_BLUES</option>
                        <option value="1.Pistachio">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1_PISTACHIO</option>
                        <option value="1.RedGrey">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1_REDGREY</option>
                        <option value="1.Pink">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1_PINK</option>
                        <option value="1.Pumpkin">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_1_PUMPKIN</option>
                    </group>
                    <group label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2">
                        <option value="2.Default">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_DEFAULT</option>
                        <option value="2.Blue">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_BLUE</option>
                        <option value="2.Grey">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_GREY</option>
                        <option value="2.Orange">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_ORANGE</option>
                        <option value="2.Pink">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_PINK</option>
                        <option value="2.White">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_2_WHITE</option>
                    </group>
                    <group label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_3">
                        <option value="3.Cinnamon">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_3_CINNAMON</option>
                        <option value="3.Peppermint">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_3_PEPPERMINT</option>
                        <option value="3.Spearmint">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_3_SPEARMINT</option>
                    </group>
                    <group label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_4">
                        <option value="4.Onyx">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_4_ONYX</option>
                        <option value="4.Cobalt">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_4_COBALT</option>
                        <option value="4.Ruby">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_4_RUBY</option>
                    </group>
                    <group label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_5">
                        <option value="5.BrushedSteel">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_5_BRUSHEDSTEEL</option>
                        <option value="5.BrushedNickel">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_5_BRUSHEDNICKEL</option>
                        <option value="5.BrushedCopper">COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OPTION_GROUP_DESIGN_5_BRUSHEDCOPPER</option>
                    </group>
                </field>
                <field name="show_image" default="1" type="radio" size="1" label="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_IMAGE_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_IMAGE_DESCRIPTION">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_price" default="1" type="radio" size="1" label="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_PRICE_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_PRICE_DESCRIPTION">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="show_rating" default="1" type="radio" size="1" label="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_RATING_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_SHOW_RATING_DESCRIPTION">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
<!--                <field name="customized" default="0" type="radio" size="1" label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_CUSTOMIZED_THEME_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_CUSTOMIZED_THEME_DESCRIPTION">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="override" type="themeoverride" label="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OVERRIDE_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_MY_FAVORITES_THEME_OVERRIDE_DESCRIPTION" />
                -->
                <field name="tracking_id" type="text" label="COM_JFBCONNECT_WIDGET_AMAZON_TRACKING_ID_LABEL" description="COM_JFBCONNECT_WIDGET_AMAZON_TRACKING_ID_DESCRIPTION" />
            </fieldset>
        </fields>
    </fields>
</form>