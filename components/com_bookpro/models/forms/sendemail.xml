<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_bookpro/models/fields">
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" />

		<field name="title" type="text" label="COM_BOOKPRO_TITLE" class="inputbox"
			size="" required="true" />
		<field name="desc" type="textarea"  label="COM_BOOKPRO_NOTE" class="inputbox"
			size="" required="true" />

		<field name="code" type="text" label="COM_BOOKPRO_APP_CODE"
			class="inputbox" size="" required="true" />
		<field name="email_send_from" type="text"
			label="COM_BOOKPRO_APP_EMAIL_SEND_FROM" class="inputbox" size=""
			required="true" />
		<field name="email_send_from_name" type="text"
			label="COM_BOOKPRO_APP_EMAIL_SEND_FROM_NAME" class="inputbox" size=""
			required="true" />
		<field name="email_admin" type="text" label="COM_BOOKPRO_APP_EMAIL_ADMIN"
			class="inputbox" size="" required="true" />
		<field name="email_subject" type="text" label="COM_BOOKPRO_APP_EMAIL_SUBJECT"
			class="inputbox" size="" required="true" />

		<field name="email_body" type="editor" buttons="true"
			hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
			label="COM_BOOKPRO_APP_EMAIL_BODY" description="COM_BOOKPRO_APP_EMAIL_BODY" />

		<field name="order_status" type="list" label="COM_BOOKPRO_ORDER_ORDER_STATUS"
			description="COM_BOOKPRO_ORDER_ORDER_STATUS" class="inputbox" size="1"
			default="1">
			<option value="FINISHED">FINISHED</option>
			<option value="PENDING">PENDING</option>
			<option value="PENDING">CANCELLED</option>
			<option value="PENDING">NEW</option>
			<option value="PENDING">CONFIRMED</option>
		</field>

		<field name="payment_status" type="list" label="COM_BOOKPRO_ORDER_PAY_STATUS"
			description="COM_BOOKPRO_ORDER_PAY_STATUS" class="inputbox" size="1"
			default="1">
			<option value="PENDING">PENDING</option>
			<option value="SUCCESS">SUCCESS</option>
			<option value="FAILED">FAILED</option>
		</field>

		<field name="state" type="list" label="JSTATUS"
			description="COM_BOOKPRO_FIELD_STATE_DESC" class="inputbox" size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<fields name="metadata">
			<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">

			</fieldset>
		</fields>

	</fieldset>
</form>