<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
            addfieldpath="/components/website/website_supper_admin/com_supperadmin/models/fields"
    >
        <field
                name="id"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                type="text"
                default="0"
                readonly="true"
                class="readonly"/>

        <field
                name="name"
                type="text"
                required="true"
                label="name"
                description="name"/>
        <field
                name="element"
                type="text"
                required="true"
                label="Element"
                description="Element"/>
        <field
                name="folder"
                type="text"
                label="Folder"
                description="Folder"/>
        <field
                name="type"
                type="list"
                class="chzn-color-state"
                label="Type"
                description="Type"
                size="1"
                default="module">
            <option value="">please select type extension</option>
            <option value="module">module</option>
            <option value="component">component</option>
            <option value="plugin">plugin</option>
        </field>


        <field name="website_id" type="websites"
               description="website"
               label="website"
        />


        <field
                name="is_system"
                type="list"
                class="chzn-color-state"
                label="Is extension system"
                description="Is extension system"
                size="1"
                default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="published"
                type="list"
                class="chzn-color-state"
                label="published"
                description="published"
                size="1"
                default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="introtext"
                type="editor"
                readonly="true"
                label="Description"
                description="Description"/>



    </fieldset>
</form>
