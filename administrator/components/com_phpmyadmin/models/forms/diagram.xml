<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		addfieldpath="/administrator/components/com_plugins/models/fields"
	>
		<field
			name="id"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			type="text"
			default="0"
			readonly="true"
			class="readonly" />

		<field
			name="title"
			type="text"
			label="COM_PLUGINS_FIELD_NAME_LABEL"
			description="COM_PLUGINS_FIELD_NAME_DESC" />
		<field
			name="json"
			type="hidden"
			label="COM_PLUGINS_FIELD_NAME_JSON"
			description="COM_PLUGINS_FIELD_JSON_DESC" />
		<field
			name="data_png_image"
			type="hidden"
			label="COM_PLUGINS_FIELD_DATA_PNG_IMAGE"
			description="COM_PLUGINS_FIELD_DATA_PNG_IMAGE_DESC" />

        <field name="website_id" type="websites"
               description="COM_PLUGIN_FIELD_WEBSITE_DESC"
               label="JGLOBAL_WEBSITE"
                />

		<field
			name="enabled"
			type="list"
			class="chzn-color-state"
			label="JSTATUS"
			description="COM_PLUGINS_FIELD_ENABLED_DESC"
			size="1"
			default="1">
				<option value="1">JENABLED</option>
				<option value="0">JDISABLED</option>
		</field>

        <field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			size="1" />

		<field
			name="ordering"
			type="Pluginordering"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" />

		<field
			name="folder"
			type="text"
			class="readonly"
			size="20"
			label="COM_PLUGINS_FIELD_FOLDER_LABEL"
			description="COM_PLUGINS_FIELD_FOLDER_DESC"
			readonly="true" />

		<field
			name="element"
			type="text"
			class="readonly"
			size="20"
			label="COM_PLUGINS_FIELD_ELEMENT_LABEL"
			description="COM_PLUGINS_FIELD_ELEMENT_DESC"
			readonly="true" />

	</fieldset>
</form>
