<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
        <field name="state" type="list" label="JSTATUS" description="COM_BOOKPRO_FIELD_STATE_DESC" class="inputbox span12 small" size="1" default="1">
