            <option value="0">JUNPUBLISHED</option>
            <option value="2">Close</option>
        </field>
        <field name="cid_from" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
        <field name="order_number" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
        <field name="parent_id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>
        <field name="message" required="true" type="editor" buttons="true" class="inputbox" rows="10" cols="5" label="COM_BOOKPRO_MESSAGE" description="COM_BOOKPRO_MESSAGE"/>
        <field name="subject" type="text" required="true" label="COM_BOOKPRO_MESSAGE_SUBJECT" class="inputbox" size="100"/>
        <field name="ordernumber" type="text"  label="COM_BOOKPRO_ORDER_NUMBER" class="inputbox" size="100"/>
        <field class="hidden" name="created" type="calendar" label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC" format="%Y-%m-%d" filter="user_utc"/>
        <field class="readonly" name="cid_to" type="user" required="true" label="COM_BOOKPRO_MESSAGE_TO" description="COM_BOOKPRO_FROM"/>
    </fieldset>
